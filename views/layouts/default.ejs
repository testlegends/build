<%- Html.docType() %>
<html>
	<head>
		<title><%- title %></title>

		<!-- Viewport mobile tag for sensible mobile support -->
		<%- Html.meta({ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1' }) %>

		<%- Html.meta('icon') %>

		<%- Html.css([
				'//fonts.googleapis.com/css?family=Raleway',
				'//netdna.bootstrapcdn.com/bootswatch/3.1.1/cerulean/bootstrap.min.css',
				'//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css',
				'../js/vendor/toastr/toastr.min.css',
				'../js/vendor/select2/select2.css',
				'style.css'
		]) %>

		<%- Html.script([
				'//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js',
				'//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js',
				'bootstrap.js'
		]) %>
	</head>

	<body>
		<div id="wrap">
			<div class="navbar navbar-default navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">
						<a data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</a>

						<a href="/" class="navbar-brand h5"><span>TestLegends</span>&nbsp; Build</a>
					</div>

					<div class="collapse navbar-collapse navbar-right">
						<ul class="nav navbar-nav">
							<% if (!req.isAuthenticated()) { %>
								<li><a href="/login" target="_self" class="navbar-without-img"><i class="fa fa-sign-in"></i> Log In</a></li>
							<% } else { %>
								<li class="dropdown">
									<a href="#" class="dropdown-toggle navbar-with-img" data-toggle="dropdown">
										<span><%= req.user.name %></span>
										<img src="http://www.gravatar.com/avatar/9116994a95b11f219055306520647168" height="30" />
									</a>
									<ul class="dropdown-menu">
										<li><a href="/logout" target="_self"><i class="fa fa-sign-out"></i> Log Out</a></li>
									</ul>
								</li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>

			<div class="container">
				<div id="content">
					<%- partial('../partials/flash') %>
					<%- body %>
				</div>

				<div id="push"></div>
			</div>
		</div>

		<footer>
			<div class="container">
				<p class="muted credit">&copy; 2013 <a href="http://jefflee.net/" target="_blank">Jeff Lee</a></p>
			</div>
		</footer>
	</body>
</html>
